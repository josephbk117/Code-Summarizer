<Window x:Class="CodeSummarizerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeSummarizerWpf"
        mc:Ignorable="d"
        Title="Code Summarizer" Height="400" Width="525" MinWidth="333" MinHeight="370">
    <Grid Height="334" VerticalAlignment="Top">
        <TextBox x:Name="openFolderTextBox" Height="33" Margin="10,10,136,0" TextWrapping="NoWrap" Text="folder path..." BorderThickness="4" VerticalAlignment="Top" VerticalContentAlignment="Center" BorderBrush="#FF065ABE"/>
        <Label x:Name="openFolderLabel" Content= "Open Folder" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="4" Margin="0,10,10,0" VerticalAlignment="Top" Height="33" Foreground="White" Background="#FF005ABE" HorizontalAlignment="Right" Width="126" MouseLeftButtonUp="OpenFolder_Label_OnLeftMouseBtnUp" MouseEnter="OpenFolder_Label_OnMouseEnter" MouseLeave="OpenFolder_Label_OnMouseLeave" MouseLeftButtonDown="OpenFolder_Label_OnLeftMouseDown" BorderBrush="#FF005ABE" FontFamily="Arial"/>
        <ComboBox x:Name="comboBox" Margin="10,48,10,0" VerticalAlignment="Top" Height="33" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="#FF005ABE" Foreground="#FF35505D" Background="Black"/>
        <TextBox x:Name="outputFolderTextBox" Height="33" Margin="10,86,136,0" TextWrapping="NoWrap" Text="output folder path..." BorderThickness="4" VerticalAlignment="Top" VerticalContentAlignment="Center" BorderBrush="#FF065ABE"/>
        <Label x:Name="outputFolderLabel" Content= "Open Folder" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="4" Margin="0,86,10,0" VerticalAlignment="Top" Height="33" Foreground="White" Background="#FF005ABE" HorizontalAlignment="Right" Width="126" MouseLeftButtonUp="OutputFolder_Label_OnLeftMouseBtnUp" MouseEnter="OutputFolder_Label_OnMouseEnter" MouseLeave="OutputFolder_Label_OnMouseLeave" MouseLeftButtonDown="OutputFolder_Label_OnLeftMouseDown" BorderBrush="#FF005ABE" FontFamily="Arial"/>
        <DockPanel Height="150" LastChildFill="False" Margin="10,124,10,0" VerticalAlignment="Top" Background="#FF005ABE">
            <DockPanel DockPanel.Dock="Top" Margin="10,10,10,0" Background="#FF006EDC">
                <Label Content="Acess Specifier Colour" HorizontalAlignment="Left" Foreground="White" Margin="20,5,0,5"/>
                <Rectangle x:Name="acessSpecifierPanel" HorizontalAlignment="Right" Width="25" Height="25" Fill="White" Margin="0,5,5,5" MouseLeftButtonUp="ColourSpecify_OnClick" />
            </DockPanel>
            <DockPanel DockPanel.Dock="Top" Margin="10,10,10,0" Background="#FF006EDC">
                <Label Content="Data Type Specifier Colour" HorizontalAlignment="Left" Foreground="White" Margin="20,5,0,5"/>
                <Rectangle x:Name="dataTypeSpecifierPanel" HorizontalAlignment="Right" Width="25" Height="25" Fill="White" Margin="0,5,5,5" MouseLeftButtonUp="ColourSpecify_OnClick" />
            </DockPanel>
            <DockPanel DockPanel.Dock="Top" Margin="10,10,10,0" Background="#FF006EDC">
                <Label Content="Identifier Specifier Colour" HorizontalAlignment="Left" Foreground="White" Margin="20,5,0,5"/>
                <Rectangle x:Name="identifierSpecifierPanel" HorizontalAlignment="Right" Width="25" Height="25" Fill="White" Margin="0,5,5,5" MouseLeftButtonUp="ColourSpecify_OnClick" />
            </DockPanel>
        </DockPanel>
        <Label x:Name="generateCodeSummaryBtn" Content= "Generate Code Summary" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="4"  Foreground="White" Background="#FF005ABE" MouseLeftButtonUp="GenerateCodeSummaryBtn_OnLeftMouseBtnUp" MouseEnter="GenerateCodeSummaryBtn_Label_OnMouseEnter" MouseLeave="GenerateCodeSummaryBtn_Label_OnMouseLeave" MouseLeftButtonDown="GenerateCodeSummaryBtn_OnLeftMouseDown" BorderBrush="#FF005ABE" FontFamily="Arial" Height="33" VerticalAlignment="Bottom" Margin="10,0,10,10"/>
    </Grid>
</Window>
